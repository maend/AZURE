{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName":{"type": "string"},
        "planeName": {"type": "string"},
        "webAppName":{"type": "string"}
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "location":"[resourceGroup().location]",
            "name": "[parameters('storageAccountName')]",
            "sku": {"name": "Standard_LRS"} , 
            "resources":[
            {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "name": "/default/output",
            "dependsOn" : [
                "[parameters('storageAccountName')]"
                        ]
             }
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "name":"[parameters('planeName')]",
            "location": "[resourceGroup().location]",
            "sku":{"name":"S1"}
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "name":"[parameters('webAppName')]",
            "location":"[resourceGroup().location]",
            "dependsOn": [
                "[parameters('planeName')]",
                "[parameters('storageAccountName')]"
                ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('planeName'))]",
                "siteConfig":{
                    "appSettings": [
                        {
                            "name": "storageAccountKey" , 
                            "value" : "[listKeys(parameters('storageAccountName'),'2020-12-01').keys[0].value]"
                        }
                    ]
                }


            }
            
        }


        
    ],
    "outputs": {}
}